<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#090935"
    >

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <LinearLayout
                android:id="@+id/btnMale"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:background="@drawable/g_c_btn"
                android:layout_weight="5"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man_icon"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnFemale"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:background="@drawable/g_c_btn"
                android:layout_weight="5"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/woman_icon"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:layout_marginVertical="10dp"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/g_button"
                android:layout_weight="5"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/feet_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="15dp"
                    android:textSize="32sp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:orientation="vertical"
                        android:background="@drawable/o_button"
                        android:gravity="center"
                        >

                        <ImageButton
                            android:id="@+id/feet_plus"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="#00FFFFFF"
                            android:padding="5dp"
                            android:src="@drawable/add" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:orientation="vertical"
                        android:background="@drawable/o_button"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:id="@+id/feet_minus"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/minus"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_marginHorizontal="15dp"
                            android:padding="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feet"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/g_button"
                android:layout_weight="5"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/inchi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:orientation="vertical"
                        android:background="@drawable/o_button"
                        android:gravity="center"
                        >

                        <ImageButton
                            android:id="@+id/inchi_plus"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="#00FFFFFF"
                            android:padding="5dp"
                            android:src="@drawable/add" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:orientation="vertical"
                        android:background="@drawable/o_button"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:id="@+id/inchi_minus"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/minus"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_marginHorizontal="15dp"
                            android:padding="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inch"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>



        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_marginVertical="10dp"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:background="@drawable/g_button"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionGo"
                    android:layout_margin="15dp"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="@color/white"
                    android:hint="0"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:orientation="vertical"
                        android:background="@drawable/o_button"
                        android:gravity="center"
                        >

                        <ImageButton
                            android:id="@+id/kg_plus"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="#00FFFFFF"
                            android:padding="5dp"
                            android:src="@drawable/add" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:orientation="vertical"
                        android:background="@drawable/o_button"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:id="@+id/kg_minus"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/minus"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_marginHorizontal="15dp"
                            android:padding="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KG"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />



        </LinearLayout>

        <Button
            android:id="@+id/calcBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DC0A58"
            android:text="Calculate BMI"
            android:layout_marginVertical="30dp"
            />

    </LinearLayout>


</ScrollView>